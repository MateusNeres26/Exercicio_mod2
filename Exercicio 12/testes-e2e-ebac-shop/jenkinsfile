pipeline {
    agent any

    stages {
        stage('Clonar repositório') {
            steps {
                git branch: 'main', url: 'https://github.com/MateusNeres26/exercicios-ebac.git', dir: 'Exercicio 12/testes-e2e-ebac-shop'
            }
        }

        stage('Instalar dependências') {
            steps {
                sh 'npm install'
            }
        }

        stage('Executar testes') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
}
